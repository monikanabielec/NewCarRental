@model NewCarRental.Models.DAL.Reservations

@{
    ViewBag.Title = "Create";
}


    @if (ViewBag.Message != null)
    { 
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>        
    }


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
